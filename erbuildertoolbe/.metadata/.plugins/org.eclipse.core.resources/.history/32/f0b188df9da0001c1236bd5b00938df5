package com.eldenringbuildertool.erbuildertool.persistency;

import java.nio.file.Paths;
import java.util.Map;

import com.fasterxml.jackson.databind.ObjectMapper;

public class GearMapper {
	static public Map<String,Object> getGearFromJSON(){
		try {
		    // create object mapper instance
		    ObjectMapper mapper = new ObjectMapper();

		    // convert JSON file to map
		    List<Map<?, ?>> map = mapper.readValue(Paths.get("assets/elmi.json").toFile(), Map.class);

		    // print map entries
		    for (Map.Entry<?, ?> entry : map.entrySet()) {
		        System.out.println(entry.getKey() + "=" + entry.getValue());
		    }

		} catch (Exception ex) {
		    ex.printStackTrace();
		}
		return null;
	}
}
